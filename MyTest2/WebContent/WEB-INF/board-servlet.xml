<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- @Controller -->

<!-- @Autowired,@Required  -->
<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />
<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />

<!-- 5개의 구성요소에 해당되는 환경설정 -->
<!-- (4)viewResolver(위치(prefix),이동할 페이지의 확장자(suffix)  -->
<bean id="viewResolver"
      class="org.springframework.web.servlet.view.InternalResourceViewResolver">
     <property name="viewClass" 
                   value="org.springframework.web.servlet.view.JstlView" />
     <property name="prefix" value="./view/" />
     <property name="suffix" value=".jsp"></property>
 </bean>

<!--(2) 요청명령어에 따른 처리해주는 컨트롤러를 문의? -->
<bean id="defaultHandlerMapping" 
         class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" />

<bean id="boardDAO"  class="lee.SqlMapBoardDao">
  <property name="sqlSessionFactory" ref="sqlSessionFactory" />
</bean>
<bean id="detailDAO"  class="lee.SqlMapDetailDao">
  <property name="sqlSessionFactory" ref="sqlSessionFactory" />
</bean>
<bean id="cartDAO" class="lee.SqlMapCartDao">
  <property name="sqlSessionFactory" ref="sqlSessionFactory" />
</bean>


<!-- 1.글목록보기 (list()) setDao(BoardDAO객체)-->
<bean name="/list.do"  class="controller.ListActionController">
  <property name="dao">
     <ref bean="boardDAO" />
  </property>
</bean>

<!-- 4.글상세보기  -->
<bean name="/retrieve.do"  class="controller.RetrieveActionController">
  <property name="dao">
     <ref bean="boardDAO" />
  </property>
</bean>

<!-- 9-1. 상품의 상세페이지로 이동 -->
<bean name="/toSf.do"  class="controller.DetailController" />
<bean name="/toMf.do"  class="controller.DetailController" />
<bean name="/toLf.do"  class="controller.DetailController" />

<!-- 10. 메인페이지로 이동 -->
<bean name="/main.do"  class="controller.MainActionController">
  <property name="dao">
     <ref bean="detailDAO" />
  </property>
</bean>

<!-- 11.카트 페이지로 이동 -->
<bean name="/cart.do" class="controller.CartActionController" />

<!-- 12.카트 삭제 기능 후 원래 리스트로 돌아감 -->
<bean name="/cartCancle.do"  class="controller.CancleActionController">
  <property name="cartDAO">
     <ref bean="cartDAO" />
  </property>
</bean>

</beans>









